mixin panel(containerClass)
    .panel 
        .panel__rows
            .panel__row
                .panel__unit.max-value
                    input.max-value(type="text")
                    label(for="max-value").max-value maxValue
                .panel__unit.min-value
                    input.min-value(type="text")
                    label(for="min-value").min-value minValue 
            .panel__row 
                    .panel__unit.to-val
                        input.to-val(type="text")
                        label(for="to-val").to-val toVal 
                    .panel__unit.from-val
                        input.from-val(type="text")
                        label(for="from-val").from-val fromVal
            .panel__row 
                    .panel__unit.slider-step
                        input.slider-step(type="text")
                        label(for="slider-step").slider-step slider step 
                    .panel__unit.units
                        input.units(type="text")
                        label(for="units").units units
            .panel__row 
                    .panel__unit.vertical 
                        input.is-checkbox(type="checkbox", name="vertical", id=`vertical-${containerClass}`)
                        label(for="vertical-"+containerClass).vertical isVertical
                    .panel__unit.range 
                        input.is-checkbox(type="checkbox", name="range" id=`range-${containerClass}`)
                        label(for="range-"+containerClass).range range 
                    .panel__unit.show-values 
                        input.is-checkbox(type="checkbox",name="show-values",id=`show-values-${containerClass}`)
                        label(for="show-values-"+containerClass).show-values show values


